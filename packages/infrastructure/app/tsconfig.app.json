{
  "extends": ["../../../tsconfig.json", "@vue/tsconfig/tsconfig.dom.json"],
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "types": ["jest"],
    "paths": {
      "@ichtus/breakfeastwheel-domain": ["domain/src"],
      "@ichtus/breakfeastwheel-adapters": ["adapters/src"],
      "@/*": ["infrastructure/app/src/*"]
    },
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"]
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.vue", "tests/**/*.ts", "tests/**/*.tsx", "env.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["node_modules"]
}
